---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
</head>

<body style="margin:0;background:#020617;color:#e5e7eb;font-family:Inter,system-ui;">
  <Header />
  <main style="max-width:1100px;margin:auto;padding:3rem 1.5rem;">
    <slot />
  </main>
  <Footer />
</body>
</html>
